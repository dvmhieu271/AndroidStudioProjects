<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quad_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/quadratic_header"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:id="@+id/quadratic_header"
        android:layout_height="32dp" />

    <EditText android:id="@+id/edit_message1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:hint="@string/edit_quad_a"
        android:inputType="number|numberSigned|numberDecimal"
        android:layout_height="1dp" />
    <EditText android:id="@+id/edit_message2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:hint="@string/edit_quad_b"
        android:inputType="number|numberSigned|numberDecimal" />
    <EditText android:id="@+id/edit_message3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:hint="@string/edit_quad_c"
        android:inputType="number|numberSigned|numberDecimal" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_quad_calculate"
            android:onClick="buttonCalculate"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_quad_reset"
            android:onClick="buttonReset"
            android:textAllCaps="false"/>
    </TableRow>

    <TextView
        android:text="Raw Answer"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:id="@+id/TextView_Answer"
        tools:text="Raw Answer:"
        android:layout_height="100dp" />
    <TextView
        android:text="Factored Form"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:id="@+id/TextView_Answer2"
        tools:text="Factored Form:"
        android:layout_height="140dp" />
</LinearLayout>